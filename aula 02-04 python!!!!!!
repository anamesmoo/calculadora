        "def fatorial (n):\n",
        "  if n == 0:\n",
        "    return 1\n",
        "  else:\n",
        "    return n * fatorial(n-1)\n",
        "\n",
        "try:\n",
        "  lista = [5, 6, 7, 8, azul]\n",
        "  for inteiro in lista:\n",
        "    resultado = fatorial(inteiro)\n",
        "  print('fatorial de', inteiro, 'é', resultado)\n",
        "\n",
        "except NameError:\n",
